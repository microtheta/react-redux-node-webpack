{
  "name": "react-node-starter",
  "version": "1.0.0",
  "description": "Demo App with React as front-end and NodeJs as back-end",
  "main": "server/app.js",
  "author": "Mahesh Thumar",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "nodemon app.js",
    "build": "webpack --config webpack/webpack.config.js",
    "eslint": "eslint **/*.js"
  },
  "nodemonConfig": {
    "ignore": ["client/*", "public/*"]
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "bootstrap": "^4.0.0",
    "clean-webpack-plugin": "^0.1.17",
    "compression": "^1.7.1",
    "concurrently": "^3.5.1",
    "dotenv": "^4.0.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.2",
    "express-status-monitor": "^1.0.1",
    "morgan": "^1.9.0",
    "multer": "^1.3.0",
    "passport": "^0.4.0",
    "pug": "^2.0.0-rc.4",
    "webpack": "^3.10.0",
    "webpack-dev-middleware": "^2.0.4",
    "webpack-hot-middleware": "^2.21.0"
  },
  "devDependencies": {
    "eslint": "^4.16.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "comma-dangle": 0,
      "consistent-return": 0,
      "no-param-reassign": 0,
      "no-underscore-dangle": 0,
      "no-shadow": 0,
      "no-console": 0,
      "no-plusplus": 0,
      "no-unused-expressions": 0
    },
    "env": {
      "jasmine": true,
      "mocha": true,
      "node": true
    }
  }
}
