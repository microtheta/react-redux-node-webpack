{
  "name": "react-node-starter",
  "version": "1.0.0",
  "description": "Demo App with React as front-end and NodeJs as back-end",
  "main": "server/app.js",
  "author": "Mahesh Thumar",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "nodemon app.js",
    "production": "NODE_ENV='production' webpack --config webpack/webpack.prod.config.js && NODE_ENV='production' node app.js",
    "eslint": "eslint **/*.js"
  },
  "nodemonConfig": {
    "ignore": [
      "client/*",
      "public/*"
    ]
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "bootstrap": "^4.0.0",
    "compression": "^1.7.1",
    "concurrently": "^3.5.1",
    "dotenv": "^4.0.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.2",
    "express-status-monitor": "^1.0.1",
    "font-awesome": "^4.7.0",
    "morgan": "^1.9.0",
    "multer": "^1.3.0",
    "passport": "^0.4.0",
    "pug": "^2.0.0-rc.4",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "webpack": "^3.10.0",
    "webpack-dev-middleware": "^2.0.4",
    "webpack-hot-middleware": "^2.21.0",
    "webpack-merge": "^4.1.1"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "clean-webpack-plugin": "^0.1.17",
    "css-loader": "^0.28.9",
    "eslint": "^4.16.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.6",
    "node-sass": "^4.7.2",
    "nodemon": "^1.14.11",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.1",
    "url-loader": "^0.6.2",
    "webpack-assets-manifest": "^1.0.0"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "comma-dangle": 0,
      "consistent-return": 0,
      "no-param-reassign": 0,
      "no-underscore-dangle": 0,
      "no-shadow": 0,
      "no-console": 0,
      "no-plusplus": 0,
      "no-unused-expressions": 0
    },
    "env": {
      "jasmine": true,
      "mocha": true,
      "node": true
    }
  }
}
